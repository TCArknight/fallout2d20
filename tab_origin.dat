<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- This file contains the definition of the "Skills" tab panel. This tab is where
      the user selects and adjusts the skills for the character.

      All public visual elements used with this tab panel start with the prefix "sk"
      to associate them with the tab.
-->

<document signature="Hero Lab Data">

  <portal
    id="spChsLbl"
    style="lblBrdLeft">
    <label>
	  <labeltext>
	  @text = "Trait"
	    </labeltext>
      </label>
    </portal>
	
  <portal
    id="spChsTrait"
    style="chsNormal"
    width="110">
    <chooser_table
      component="OriginTrait"
      choosetemplate="LargeItem">
      <needtag usehero="yes" container="Origin" thing="OriginCat"/>
      <denytag usehero="yes" container="OriginTrait" thing="OriginTrait"/>
      <chosen><![CDATA[
        if (@ispick = 0) then
          @text = "{text clrwarning}Select Trait"
        else
          @text = field[name].text
          endif
        ]]></chosen>
      <titlebar><![CDATA[
        @text = "Choose the trait for your character"
        ]]></titlebar>
      </chooser_table>
    </portal>
      
  <portal
    id="spChsLbl2"
    style="lblBrdLeft">
    <label>
	  <labeltext>
	  @text = "Trait"
	    </labeltext>
      </label>
    </portal>
	
  <portal
    id="spChsTrait2"
    style="chsNormal"
    width="110">
    <chooser_table
      component="OriginTrait"
      choosetemplate="LargeItem">
      <needtag usehero="yes" container="Origin" thing="OriginCat"/>
      <denytag usehero="yes" container="OriginTrait" thing="OriginTrait"/>
      <chosen><![CDATA[
        if (@ispick = 0) then
          @text = "{text clrwarning}Select Trait"
        else
          @text = field[name].text
          endif
        ]]></chosen>
      <titlebar><![CDATA[
        @text = "Choose the trait for your character"
        ]]></titlebar>
      </chooser_table>
    </portal>	
	
  <portal
    id="spRobotBody"
    style="tblNormal">
    <table_dynamic
      component="Robot"
      showtemplate="CustomModItem"
      choosetemplate="SimpleItem"
      showfixedlast="yes"
      addpick="resRobotBody">
      <list>RobotBody.Body</list>
      <candidate inheritlist="yes"></candidate>
      <titlebar><![CDATA[
        @text = "Add a Body - " & hero.child[resRobotBody].field[resSummary].text
        ]]></titlebar>
      <description/>
      <headertitle><![CDATA[
        @text = "Robot Body: " & hero.child[resRobotBody].field[resSummary].text
        ]]></headertitle>
      <additem><![CDATA[
        ~if we're in advancement mode, we've been frozen, so display accordingly
        if (state.iscreate = 0) then
          @text = "{text clrgrey}Add  Via Advances Tab"
          done
          endif

        ~set the color based on whether the proper number of slots are allocated
        if (field[resLeft].value = 0) then
          @text = "{text clrgrey}"
        elseif (field[resLeft].value < 0) then
          @text = "{text clrwarning}"
          endif
        
		@text &= "Add New Module"
		
        ]]></additem>
      </table_dynamic>
    </portal>
	
  <portal
    id="spRobotArms"
    style="tblNormal">
    <table_dynamic
      component="Robot"
      showtemplate="CustomModItem"
      choosetemplate="SimpleItem"
      showfixedlast="yes"
      addpick="resRobotArms">
      <list>RobotBody.Arm</list>
      <candidate inheritlist="yes"></candidate>
      <titlebar><![CDATA[
        @text = "Add an Arm - " & hero.child[resRobotArms].field[resSummary].text
        ]]></titlebar>
      <description/>
      <headertitle><![CDATA[
        @text = "Robot Arms: " & hero.child[resRobotArms].field[resSummary].text
        ]]></headertitle>
      <additem><![CDATA[
        ~if we're in advancement mode, we've been frozen, so display accordingly
        if (state.iscreate = 0) then
          @text = "{text clrgrey}Add  Via Advances Tab"
          done
          endif

        ~set the color based on whether the proper number of slots are allocated
        if (field[resLeft].value = 0) then
          @text = "{text clrgrey}"
        elseif (field[resLeft].value < 0) then
          @text = "{text clrwarning}"
          endif
        @text &= "Add New Arm"
        ]]></additem>
      </table_dynamic>
    </portal>
	
  <template
    id="spSpcPerkTrait"
    name="Origin Perk Trait Template"
    compset="Origin"
    marginhorz="3"
    marginvert="2">

  <portal
    id="spLblPerk"
    style="lblBrdLeft">
    <label>
	  <labeltext>
	  @text = "Select Perk instead of Trait?"
	    </labeltext>
      </label>
    </portal>
	
  <portal
    id="orPerkTrait"
    style="chkNormal"
    tiptext="Click to select a perk instead of a 2nd trait.">
    <checkbox
      field="orPerkSelect">
      </checkbox>
      </portal>
                
    <position><![CDATA[
      ~set up our dimensions, with a width that we dictate; our width can vary
     
      portal[spLblPerk].height = 20

      ~position the description on the left and let it use all available space
      portal[orPerkTrait].top = 0
      portal[orPerkTrait].left = 0
      ~portal[orPerkTrait].width = width
      portal[orPerkTrait].height = height

      portal[spLblPerk].top = 0
      portal[spLblPerk].left = portal[orPerkTrait].right + 5
      portal[spLblPerk].width = width - portal[orPerkTrait].width
	  ~portal[spLblPerk].height = portal[orPerkTrait].height
	  perform portal[spLblPerk].centeron[vert,orPerkTrait]
      ]]></position>

    </template>	
	
  <template
    id="spSpcTemp"
    name="Origin Template"
    compset="Origin"
    marginhorz="3"
    marginvert="2">

    <portal
      id="spSpcTitle"
      style="lblTitle">
      <label>
        <labeltext><![CDATA[
          @text = "Description"
          ]]></labeltext>
        </label>
      </portal>
      
    <portal
      id="spSpcDesc"
      style="lblBrdLeft">
      <label
        field="descript"
        ismultiline="yes"
		scrollable="yes">
        </label>
      </portal>
                
    <position><![CDATA[
      ~set up our dimensions, with a width that we dictate; our width can vary
     
      portal[spSpcTitle].height = 20

      ~position the description on the left and let it use all available space
      portal[spSpcTitle].top = 0
      portal[spSpcTitle].left = 0
      portal[spSpcTitle].width = width
      
      portal[spSpcDesc].top = portal[spSpcTitle].bottom + 5
      portal[spSpcDesc].left = 0
      portal[spSpcDesc].width = width
      portal[spSpcDesc].height = height

      ]]></position>

    </template>

  <template
    id="spSpcMenus"
    name="Origin Menus"
    compset="UserSelect"
    marginhorz="3"
    marginvert="2">

    <portal
      id="lblmenu1"
      style="lblBrdLeft">
      <label
        field="usrLabel1">
        </label>
      </portal>

    <portal
      id="lblmenu2"
      style="lblBrdLeft">
      <label
        field="usrLabel2">
        </label>
      </portal>
	  
    <portal
      id="menu1"
      style="menuNormal">
      <menu_things
        field="usrChosen1"
        component="none"
        maxvisible="10"
        usepicksfield="usrSource1"
        candidatefield="usrCandid1">
        </menu_things>
      </portal>

    <portal
      id="menu2"
      style="menuNormal">
      <menu_things
        field="usrChosen2"
        component="none"
        maxvisible="10"
        usepicksfield="usrSource2"
        candidatefield="usrCandid2">
        </menu_things>
      </portal>
  
    <position><![CDATA[
      ~position our labels on the left
      portal[lblmenu1].height = portal[menu1].height
	  portal[lblmenu1].left = 0
	  portal[lblmenu1].width = 180

	  portal[menu1].left = portal[lblmenu1].right + 5
	  portal[menu1].width = 150

      portal[lblmenu2].top = portal[lblmenu1].bottom + 10
	  portal[lblmenu2].height = portal[menu1].height
	  portal[lblmenu2].left = portal[lblmenu1].left
	  portal[lblmenu2].width = portal[lblmenu1].width

	  portal[menu2].top = portal[menu1].bottom + 10
	  portal[menu2].left = portal[menu1].left
	  portal[menu2].width = portal[menu1].width
	  
      ~determine whether our portals are visible; we only show them if requested
      ~Note: Remember that a non-empty tagexpr field indicates menu selection is used.
      if (field[usrCandid1].isempty <> 0) then
        portal[lblmenu1].visible = 0
        portal[menu1].visible = 0
      elseif (field[usrLabel1].isempty <> 0) then
        portal[lblmenu1].visible = 0
        endif
	  
      if (field[usrCandid2].isempty <> 0) then
        portal[lblmenu2].visible = 0
        portal[menu2].visible = 0
      elseif (field[usrLabel2].isempty <> 0) then
        portal[lblmenu2].visible = 0
        endif

      ~if a menu is visible, make sure it has a selection
      if (portal[menu1].visible <> 0) then
        if (field[usrChosen1].ischosen = 0) then
          perform portal[menu1].setstyle[menuError]
          endif
        endif
      if (portal[menu2].visible <> 0) then
        if (field[usrChosen2].ischosen = 0) then
          perform portal[menu2].setstyle[menuError]
          endif
        endif
		
	]]></position>

    </template>	

  <template
    id="orTagSkillMenu"
    name="Tag Skills Menus"
    compset="Origin"
    marginhorz="3"
    marginvert="2">

    <portal
      id="lbltagTitle"
      style="lblTitle">
      <label>
	    <labeltext>
		  @text = "Tag Skills"
		  </labeltext>
        </label>
      </portal>
	  
    <portal
      id="lbltag1"
      style="lblBrdLeft">
      <label>
	    <labeltext>
		  @text = "Tag Skill"
		  </labeltext>
        </label>
      </portal>

    <portal
      id="lbltag2"
      style="lblBrdLeft">
      <label>
	    <labeltext>
		  @text = "Tag Skill"
		  </labeltext>
        </label>
      </portal>

    <portal
      id="lbltag3"
      style="lblBrdLeft">
      <label>
	    <labeltext>
		  @text = "Tag Skill"
		  </labeltext>
        </label>
      </portal>

    <portal
      id="lbltag4"
      style="lblBrdLeft">
      <label>
	    <labeltext>
		  @text = "Tag Skill"
		  </labeltext>
        </label>
      </portal>

    <portal
      id="menutag1"
      style="menuNormal">
      <menu_things
        field="orTagSkill1"
        component="none"
        maxvisible="10"
		candidatefield="orSklChoiceExpr1"
        usepicks="actor">
        </menu_things>
      </portal>	

    <portal
      id="menutag2"
      style="menuNormal">
      <menu_things
        field="orTagSkill2"
        component="none"
        maxvisible="10"
		candidatefield="orSklChoiceExpr2"
        usepicks="actor">
        </menu_things>
      </portal>	

    <portal
      id="menutag3"
      style="menuNormal">
      <menu_things
        field="orTagSkill3"
        component="none"
        maxvisible="10"
		candidatefield="orSklChoiceExpr3"
        usepicks="actor">
        </menu_things>
      </portal>	

    <portal
      id="menutag4"
      style="menuNormal">
      <menu_things
        field="orTagSkill4"
        component="none"
        maxvisible="10"
		candidatefield="orSklChoiceExpr4"
        usepicks="actor">
        </menu_things>
      </portal>	
	  
    <position><![CDATA[
      portal[lbltagTitle].top = 0
	  portal[lbltagTitle].width = width
		  
      ~position our labels on the left
      portal[lbltag1].top = portal[lbltagTitle].bottom + 5
	  portal[lbltag1].height = portal[menutag1].height
	  portal[lbltag1].left = 10
	  portal[lbltag1].width = (width/4) - 20

	  portal[menutag1].top = portal[lbltag1].top
	  portal[menutag1].left = portal[lbltag1].right + 5
	  portal[menutag1].width = width/4
	  
      portal[lbltag2].top = portal[lbltag1].top 
	  portal[lbltag2].height = portal[lbltag1].height
	  portal[lbltag2].left = width/2
	  portal[lbltag2].width = (width/4) - 20
	  
	  portal[menutag2].top = portal[lbltag2].top
	  portal[menutag2].left = portal[lbltag2].right + 5
	  portal[menutag2].width = width/4
	  
      portal[lbltag3].top = portal[lbltag1].bottom + 5
	  portal[lbltag3].height = portal[lbltag1].height
	  portal[lbltag3].left = portal[lbltag1].left
	  portal[lbltag3].width = (width/4) - 20
	  
	  portal[menutag3].top = portal[lbltag3].top
	  portal[menutag3].left = portal[lbltag3].right + 5
	  portal[menutag3].width = width/4
	  
      portal[lbltag4].top = portal[lbltag3].top
	  portal[lbltag4].height = portal[lbltag1].height
	  portal[lbltag4].left = portal[lbltag2].left
	  portal[lbltag4].width = (width/4) - 20
	  
	  portal[menutag4].top = portal[lbltag4].top
	  portal[menutag4].left = portal[lbltag4].right + 5
	  portal[menutag4].width = width/4
	  
	  if (field[orMaxTagSkills].value <> 4) then
	    portal[lbltag4].visible = 0
		portal[menutag4].visible = 0
	    endif
      ~determine whether our portals are visible; we only show them if requested
      ~Note: Remember that a non-empty tagexpr field indicates menu selection is used.

      ~if a menu is visible, make sure it has a selection
      if (portal[menutag1].visible <> 0) then
        if (field[orTagSkill1].ischosen = 0) then
          perform portal[menutag1].setstyle[menuError]
          endif
        endif
      if (portal[menutag2].visible <> 0) then
        if (field[orTagSkill2].ischosen = 0) then
          perform portal[menutag2].setstyle[menuError]
          endif
        endif
      if (portal[menutag3].visible <> 0) then
        if (field[orTagSkill3].ischosen = 0) then
          perform portal[menutag3].setstyle[menuError]
          endif
        endif
      if (portal[menutag4].visible <> 0) then
        if (field[orTagSkill4].ischosen = 0) then
          perform portal[menutag4].setstyle[menuError]
          endif
        endif		
	]]></position>

    </template>	
  <!-- origin layout
        This layout orchestrates the display of the visual elements that comprise
        the Skills tab. This amounts to a title at the top and a dynamic table below
        where the user can add and adjust the skills he wants.

        The logic for this layout is similar to (albeit much simpler than) the
        logic for the Basics tab. So please refer to the Basics tab for more details.
		
		
    <templateref template="spSpcMenus" useagent="yes"/>
  -->
  <layout
    id="origin">
    <portalref portal="spChsLbl" />
    <portalref portal="spChsTrait" />
    <portalref portal="spChsLbl2" />
    <portalref portal="spChsTrait2" />
    <portalref portal="spRobotBody" />
    <portalref portal="spRobotArms" />
    <templateref template="spSpcPerkTrait" useagent="yes"/>
    <templateref template="spSpcTemp" useagent="yes"/>
    <templateref template="orTagSkillMenu" useagent="yes"/>
	
    <!-- This script sizes and positions the layout and its child visual elements. -->
    <position><![CDATA[
	  var myWidth as number
	  myWidth = width/4 - 5

      ~both tables span the full width
      template[spSpcTemp].width = width
	  template[spSpcTemp].height = height/3
      template[spSpcTemp].visible = 1
	  
      ~template[spSpcMenus].top = template[spSpcTemp].bottom + 30
      ~template[spSpcMenus].width = width
	  ~template[spSpcMenus].height = 100
      ~template[spSpcMenus].visible = 1
	  
	  template[spSpcPerkTrait].top = template[spSpcTemp].bottom + 30
	  template[spSpcPerkTrait].left = template[spSpcTemp].left + 3
	  template[spSpcPerkTrait].width = width/2
	  template[spSpcPerkTrait].height = 40
	  
	  template[spSpcPerkTrait].visible = agent.field[orTraitSelect].value
	  
      if (template[spSpcPerkTrait].visible = 1) then
	    portal[spChsLbl].top = template[spSpcPerkTrait].bottom + 10
	  else
	    portal[spChsLbl].top = template[spSpcTemp].bottom + 30
	    endif
	  portal[spChsLbl].left = template[spSpcPerkTrait].left + 3
	  portal[spChsLbl].width = myWidth
	  portal[spChsLbl].height = 20
	  portal[spChsLbl].visible = agent.field[orTraitSelect].value
	  
	  portal[spChsTrait].top = portal[spChsLbl].top
	  portal[spChsTrait].left = portal[spChsLbl].right + 5
	  portal[spChsTrait].width = myWidth
	  portal[spChsTrait].height = 20
	  portal[spChsTrait].visible = agent.field[orTraitSelect].value
	  
	  portal[spChsLbl2].top = portal[spChsLbl].top
	  portal[spChsLbl2].left = portal[spChsTrait].right + 5
	  portal[spChsLbl2].width = myWidth
	  portal[spChsLbl2].height = 20
	  portal[spChsLbl2].visible = agent.field[orTraitSelect].value
	  
	  portal[spChsTrait2].top = portal[spChsLbl2].top
	  portal[spChsTrait2].left = portal[spChsLbl2].right + 5
	  portal[spChsTrait2].width = myWidth
	  portal[spChsTrait2].height = 20
	  portal[spChsTrait2].visible = agent.field[orTraitSelect].value
	  
      template[orTagSkillMenu].top = portal[spChsLbl].bottom + 5
      template[orTagSkillMenu].width = width
	  template[orTagSkillMenu].height = 200
      template[orTagSkillMenu].visible = 1
	  autotop = template[orTagSkillMenu].bottom
	  
	  ~portal[spRobotArms].top = template[orTagSkillMenu].bottom + 5
	  ~portal[spRobotArms].left = template[spSpcTemp].left + 3
	  ~portal[spRobotArms].width = width - 5
	  ~portal[spRobotArms].height = 20
	  ~portal[spRobotArms].visible = #isrobot[]
 
	  ~ Robot parts for Modding
      perform portal[spRobotBody].autoplace[0]
	  portal[spRobotBody].visible = #isrobot[]
	  
      perform portal[spRobotArms].autoplace[5]
	  portal[spRobotArms].visible = #isrobot[]
	  
	  if (agent.field[orNumTraits].value = 1) then
	    portal[spChsLbl2].visible = 0
	    portal[spChsTrait2].visible = 0
	  else
	    portal[spChsLbl2].visible = portal[spChsLbl].visible
	    portal[spChsTrait2].visible = portal[spChsTrait].visible
	    endif
      
	  if (agent.field[orPerkSelect].value = 1) then
	    portal[spChsLbl2].visible = 0
	    portal[spChsTrait2].visible = 0
	  else
	    portal[spChsLbl2].visible = portal[spChsLbl].visible
	    portal[spChsTrait2].visible = portal[spChsTrait].visible
	    endif
		
      ]]></position>

    </layout>

  <panel
    id="origin"
    name="Origin"
    marginhorz="5"
    marginvert="5"
    order="60"
    agentcompset="Origin"
    agentlive="Origin"
    agentname="name"
    >
    <live>!HideTab.origin</live>
    <layoutref layout="origin"/>
    <position><![CDATA[
      ]]></position>
    </panel>


  </document>
